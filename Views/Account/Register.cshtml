@model InventoryManagementSystem.Models.ApplicationUser
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form asp-action="Register" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Password</label>
        <input name="password" type="password" class="form-control" />
        <span class="text-danger">@ViewData["PasswordError"]</span>
    </div>

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContactInfo"></label>
        <input asp-for="ContactInfo" class="form-control" />
        <span asp-validation-for="ContactInfo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PreferredCategories"></label>
        <input asp-for="PreferredCategories" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
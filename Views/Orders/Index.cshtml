@model IEnumerable<InventoryManagementSystem.Models.Order>
@{
    ViewData["Title"] = "Your Orders";
}

<h2>Your Orders</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Order ID</th>
        <th>Guest Name</th>
        <th>Order Date</th>
        <th>Total Price</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @if (!Model.Any())
    {
        <tr>
            <td colspan="5">No orders found.</td>
        </tr>
    }
    else
    {
        foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.GuestName</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>
                    <a asp-controller="Orders" asp-action="Summary" asp-route-id="@order.Id" class="btn btn-info">
                        View Summary
                    </a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>